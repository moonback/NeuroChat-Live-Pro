{
  "name": "neurochat-pro",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "electron": "wait-on tcp:3000 && cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron .",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run compile:electron && echo {\"type\":\"commonjs\"} > dist-electron/package.json && concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build && npm run compile:electron && echo {\"type\":\"commonjs\"} > dist-electron/package.json && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.neurochat.pro",
    "productName": "NeuroChat Pro",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png"
    }
  }
}
